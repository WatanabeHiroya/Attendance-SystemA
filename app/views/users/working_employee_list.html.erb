<%= provide(:title, "出勤中社員一覧") %>

<div class="container">
  <h1>出勤中社員一覧</h1>
  <table class="table-bordered table-striped table-condensed working_employee_list">
    <thead>
      <tr>
        <th>社員番号</th>
        <th>名前</th>
      </tr>
    </thead>
    
    <tbody>
      <% if @users %> 
        <% @users.each do |user| %>
        <tr>
          <td><%= user.employee_number %></td>
          <td><%= user.name %></td>
        </tr>
        <% end %>
      <% end %> 
    </tbody>
  </table>
</div>