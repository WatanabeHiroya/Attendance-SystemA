<%= form_with(model: @base, local: true) do |f| %>
  <%= f.label :base_number, class: "label-base_edit" %>
  <%= f.text_field :base_number, class: "form-control" %>
  
  <%= f.label :base_name, class: "label-base_edit" %>
  <%= f.text_field :base_name, class: "form-control" %>
  
  <%= f.label :attendance_type, class: "label-base_edit" %>
  <%= f.text_field :attendance_type, class: "form-control" %>
  
  <%= f.submit "修正", class: "btn btn-primary btn-block btn-base_edit" %>
<% end %>