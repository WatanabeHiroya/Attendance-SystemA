<% provide(:title, 'base') %>

<div class="container">
  <h1>拠点一覧</h1>
  <div>
    <table class="table table-bordered table-condensed">
      <tbody>
        <tr>
          <th></th>
          <th></th>
          <th class="base-item">拠点番号</th>
          <th class="base-item">拠点名</th>
          <th class="base-item">勤怠種類</th>
        </tr>
        <% @bases.each do |base| %>
          <tr>
              <td class="base-item"><%= link_to "修正", edit_basis_path(base), class: "btn btn-md btn-primary" %></td>
              <td class="base-item"><%= link_to "削除", basis_path(base), method: :delete,
                      data: { confirm: "削除してよろしいですか？" },
                      class: "btn btn-md btn-primary" %>
              </td>
              <td class="base-item"><%= base.base_number %></td>
              <td class="base-item"><%= base.base_name %></td>
              <td class="base-item"><%= base.attendance_type %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "拠点情報追加", new_basis_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>